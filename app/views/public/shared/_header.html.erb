<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="text-left">
      <%= link_to root_path, class: "navbar-brand" do %>
        <h2><span>TriviaCommunity</span></h2>
      <% end %>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <%= form_tag(posts_path, method: :get, class: "form-inline my-2 my-lg-0 ml-auto") do %>
        <%= text_field_tag :q, params[:q], class: "form-control mr-sm-2", placeholder: "キーワードを入力" %>
        <%= submit_tag "検索", class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>

      <%= form_tag(posts_path, method: :get, class: "form-inline my-2 my-lg-0") do %>
        <%= select_tag :tag_id, options_for_select(Tag.all.map { |tag| [tag.name, tag.id] }), include_blank: true, class: "form-control mr-sm-2" %>
        <%= submit_tag "タグで検索", class: "btn btn-outline-success my-2 my-sm-0" %>
      <% end %>

      <ul class="navbar-nav ml-auto d-flex justify-content-end">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to public_user_path(current_customer), class: "nav-link text-light" do %>
              <i class="fas fa-user"></i> マイページ
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link text-light" do %>
              <i class="fas fa-shopping-cart"></i> ジャンル一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_public_session_path, method: :delete, class: "nav-link text-light" do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link text-light" do %>
              <i class="fas fa-shopping-bag"></i> ジャンル一覧
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
              <i class="fas fa-user-plus" aria-hidden="true"></i> 新規登録
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link text-light" do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>