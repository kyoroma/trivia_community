<!-- app/views/public/genres/show.html.erb -->

<%= render partial: 'public/shared/header' %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-body">
          <div class="mb-3">
            <strong>投稿内容：</strong>
            <p class="card-text"><%= @post.posted_article %></p>
          </div>

          <div class="mb-3">
            <strong>投稿日時：</strong>
            <p class="card-text"><%= @post.created_at.strftime('%Y-%m-%d %H:%M:%S') %></p>
          </div>

          <div class="mb-3">
            <strong>ジャンル名：</strong>
            <p class="card-text"><%= @post.genre.name %></p>
          </div>

          <div class="mb-3">
            <strong>いいね：</strong>
            <%= link_to favorite_path(@post), method: :post, class: 'btn btn-outline-primary btn-sm' do %>
              <i class="fas fa-heart"></i> いいね
            <% end %>
          </div>

          <div class="mb-3">
            <h5>コメント一覧</h5>

            <% @post.comments.each do |comment| %>
              <div class="border p-2 mb-2">
                <strong><%= comment.user.name %>:</strong>
                <%= comment.comment %>
                <br>
                <small class="text-muted"><%= comment.created_at.strftime('%Y-%m-%d %H:%M') %></small>
              </div>
            <% end %>
          </div>

          <% if user_signed_in? && !current_user.guest? %>
            <div class="mb-3">
              <%= form_with(url: public_post_comments_path(@post), model: @new_comment, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
                <div class="mb-3">
                  <%= form.label :comment, class: 'form-label' %>
                  <%= form.text_area :comment, class: 'form-control', rows: 3, required: true %>
                  <div class="invalid-feedback">コメントは必須項目です。</div>
                </div>

                <div class="d-grid gap-2">
                  <%= form.submit 'コメント投稿', class: 'btn btn-primary btn-lg' %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
