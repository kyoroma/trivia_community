<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-body">
          <h4 class="card-title text-center mb-4">新規投稿記事作成</h4>

          <%= form_with(model: @post, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
            <div class="mb-3">
              <%= form.label :投稿記事, class: "form-label" %>
              <%= form.text_area :posted_article, class: "form-control", rows: 3, required: true %>
              <div class="invalid-feedback">投稿記事は必須項目です。</div>
            </div>

            <div class="mb-3">
              <%= form.label :タグリスト, class: "form-label" %>
              <%= form.text_field :tag_list, class: "form-control", placeholder: "タグ1, タグ2, タグ3", rows: 2 %>
            </div>

            <div class="mb-3">
              <%= form.label :image, class: "form-label" %>
              <%= form.file_field :image, class: "form-control" %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "新規作成", class: "btn btn-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

