<style>
  body {
    background-color: #f8f9fa;
  }

  .login-container {
    max-width: 400px;
    margin: auto;
    margin-top: 100px;
    margin-bottom: 100px;
    padding: 30px;
    border: 1px solid #d6d8db;
    border-radius: 10px;
    background-color: #ffffff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .login-container h2 {
    text-align: center;
    color: #007bff;
  }

  .login-container form {
    margin-top: 20px;
  }

  .login-container .form-group {
    margin-bottom: 20px;
  }

  .login-container .form-control {
    border: 1px solid #ced4da;
    border-radius: 5px;
    padding: 10px;
  }

  .login-container button.btn-primary {
    background-color: #007bff;
    border: 1px solid #007bff;
    border-radius: 5px;
    padding: 10px;
    display: inline-block;
    margin-top: 10px;
    width: 100%;
  }

  .login-container p.text-center {
    margin-top: 20px;
  }

  .login-container a.btn {
    text-decoration: none;
  }

  .login-container a.btn-primary {
    background-color: #007bff;
    border: none;
    border-radius: 5px;
    padding: 10px;
    color: #ffffff;
    display: inline-block;
    margin-top: 10px;
  }
</style>

<%= render partial: 'public/shared/header' %>

<div class="login-container">
  <%= form_with(model: resource, local: true, url: user_session_path, id: "public-login-form") do |f| %>
    <h2>Login</h2>

    <div class="form-group">
      <%= f.label :name, "ユーザーネーム" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>

    <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>

    <p class="text-center mt-3">
      <%= link_to "新規登録", new_user_registration_path, class: "btn btn-success btn-block" %>
    </p>

    <%= link_to "ゲストログイン", public_guest_sign_in_path, method: :post, class: "btn btn-warning btn-block" %>
  <% end %>
</div>
