<!-- app/views/public/users/confirm_deactivation.html.erb -->

<%= render partial: 'public/shared/header' %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body text-center">
          <h2 class="card-title mb-4">アカウント削除の確認</h2>
          <p class="card-text">アカウントを削除すると元に戻すことはできません。本当に削除しますか？</p>

          <%= link_to '削除する', deactivation_user_path(current_user), method: :delete, class: 'btn btn-danger', data: { confirm: '本当にアカウントを削除しますか？' } %>
          <%= link_to 'キャンセル', public_user_path(current_user), class: 'btn btn-secondary ml-2' %>
        </div>
      </div>
    </div>
  </div>
</div>
