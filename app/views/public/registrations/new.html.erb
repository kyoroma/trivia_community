<style>

    h3 {
      margin: 20px 0  0 0;
      padding: 0 20px;
      background-color: #E5E8E8;
    }

    h5 {
      margin: 15px 0 15px 100px;
      padding: 0 20px;
      background-color: #E5E8E8;
    }

    .form-control {
      width: 185px;
    }

</style>

<%= render partial: 'public/shared/header' %>

<p id="notice"></p>
<div class="container mx-auto">
  <h3 style="display: inline-block;">新規会員登録</h3>

  <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="container mt-3">
        <div class="row row-3 ml-5">
          <div class="col-2"></div>
          <div class="col-4 col-md-6">
            <div class="d-flex align-items-center">
              <div class="pb-2" style="white-space: nowrap; width: 169.03px;">
                <%= f.label :ユーザーネーム %>
              </div>
              <div class="col-sm-6 mb-2 form-group">
                <%= f.text_field :name, class: "form-control form-control-sm" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row row-3 ml-5">
          <div class="col-2"></div>
          <div class="col-4 col-md-6">
            <div class="d-flex align-items-center">
              <div class="text-left" style="white-space: nowrap; nowrap; width: 169.03px;">
                <%= f.label :メールアドレス %>
              </div>
              <div class="col-sm-6 mt-2 form-group">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row row-3 ml-5">
          <div class="col-2"></div>
          <div class="col-4 col-md-6">
            <div class="d-flex align-items-center">
              <div class="text-center" style="white-space: nowrap; nowrap; width: 169.03px;">
                <%= f.label :パスワード %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
                <% end %>
              </div>
              <div class="col-sm-6 mb-2 form-group">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
              </div>
            </div>
          </div>
        </div>

        <div class="row row-3 ml-5">
          <div class="col-2"></div>
          <div class="col-4 col-md-6">
            <div class="d-flex align-items-center">
              <div class="text-center" style="white-space: nowrap; nowrap; width: 169.03px;">
                <%= f.label :パスワード（確認用） %>
              </div>
              <div class="col-sm-6 mt-2 form-group">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
              </div>
            </div>
          </div>
        </div>

        <div class="container">
          <div class="row mt-1">
            <div class="col-sm-5 col-xs-12">
            </div>
            <div class="col-sm-4  ml-2 col-xs-12">
              <div class="form-inline">
                <%= f.submit "新規登録", class: "btn btn-success", style: "width: 150px;" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <h5 style="display: inline-block;">すでに登録済みの方</h5>
      <p style="margin-left: 150px;"><%= link_to "こちら", new_user_session_path, style: "text-decoration: underline;" %>からログインしてください。</p>
  </div>
</div>
