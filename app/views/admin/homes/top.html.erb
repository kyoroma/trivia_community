<style>
  h3 {
    padding: 0 20px;
    background-color: #E5E8E8;
  }

  th {
    background-color: #E5E8E8;
  }
</style>

<%= render partial: 'admin/shared/header' %>

<div class="container">
  <h3 class="mt-4", style="display: inline-block;"><strong>会員一覧</strong></h3>
  <div class="container">
    <div class="col-10 ml-5">
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ネーム</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% if @users.present? %>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td>
                  <%= link_to "#{user.name}" %>
                </td>
                <td><%= user.email %></td>
                <td><%= user.is_active ? '有効' : '退会' %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>