<style>
  h3 {
    padding: 0 20px;
    background-color: #E5E8E8;
  }

  h5 {
    padding: 0 20px;
    background-color: #E5E8E8;
  }
</style>

<%= render partial: 'admin/shared/header' %>

<div class="container mt-5">
  <h3 style="display: inline-block;"><%= @user.name %>の会員詳細</h3>

  <div class="row mt-4">
    <!-- ユーザー情報 -->
    <div class="col-md-6">
      <dl class="row mb-1">
        <dt class="col-sm-4">会員ID</dt>
        <dd class="col-sm-8"><%= @user.id %></dd>

        <dt class="col-sm-4">ネーム</dt>
        <dd class="col-sm-8"><%= @user.name %></dd>

        <dt class="col-sm-4">メールアドレス</dt>
        <dd class="col-sm-8"><%= @user.email %></dd>

        <dt class="col-sm-4">会員ステータス</dt>
        <dd class="col-sm-8"><%= @user.is_active ? '有効' : '退会' %></dd>
      </dl>

      <div class="row mt-2" style="white-space: nowrap;">
        <div class="col-sm-4"></div>
        <div class="col-sm-2">
          <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-success" %>
        </div>
      </div>
    </div>

    <!-- コメント一覧 -->
    <div class="col-md-6">
      <h5 style="display: inline-block;">コメント一覧</h5>
      <div class="card">
        <div class="card-body">
          <% if @comments.present? %>
            <% @comments.each do |comment| %>
              <div class="row mb-3">
                <div class="col-md-6">
                  <p><%= comment.content %></p>
                </div>
                <div class="col-md-6">
                  <p><%= comment.genre.name if comment.genre %></p>
                </div>
              </div>
            <% end %>
          <% else %>
            <p>コメントはありません。</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
