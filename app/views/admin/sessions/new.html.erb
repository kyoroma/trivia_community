<%= render partial: 'admin/shared/header' %>

  <style>

    .span {
      color: #fff;
    }

  </style>

<body>
  <p id="notice"></p>
  <div class="container mx-auto">
    <%= form_with(model: resource, local: true, url: session_path(resource_name), id: "admin-login-form") do |f| %>
      <h2>管理者ログイン</h2>

      <div class="container text-center">
        <div class="row justify-content-center mb-3">
          <div class="col-12 col-md-6">
            <div class="d-flex align-items-center mt-4">
              <div class="mr-4" style="white-space: nowrap; width: 150px;">
                <%= f.label :メールアドレス %>
              </div>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
            </div>
          </div>
        </div>

        <div class="row justify-content-center mb-3">
          <div class="col-12 col-md-6">
            <div class="d-flex align-items-center">
              <div class="mr-5" style="white-space: nowrap; width: 130px;">
                <%= f.label :パスワード %>
              </div>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm" %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  <%= render "admin/shared/links" %>
</body>